{
    "typescript.tsdk": "node_modules/typescript/lib",
    "editor.formatOnSave": true,
    "[javascript]": {
        "editor.formatOnSave": true
    },
    "[typescript]": {
        "editor.formatOnSave": true
    },
    "[ts]": {
        "editor.formatOnSave": true
    },
    "[tsx]": {
        "editor.formatOnSave": true
    },
    "[typescriptreact]": {
        "editor.formatOnSave": true
    },
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": "explicit"
    },
    // "eslint.alwaysShowStatus": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "workbench.colorCustomizations": {
        "activityBar.activeBackground": "#fbb7af",
        "activityBar.background": "#fbb7af",
        "activityBar.foreground": "#15202b",
        "activityBar.inactiveForeground": "#15202b99",
        "activityBarBadge.background": "#089817",
        "activityBarBadge.foreground": "#e7e7e7",
        "commandCenter.border": "#15202b99",
        "sash.hoverBorder": "#fbb7af",
        "statusBar.background": "#f98b7e",
        "statusBar.foreground": "#15202b",
        "statusBarItem.hoverBackground": "#f75f4d",
        "statusBarItem.remoteBackground": "#f98b7e",
        "statusBarItem.remoteForeground": "#15202b",
        "titleBar.activeBackground": "#f98b7e",
        "titleBar.activeForeground": "#15202b",
        "titleBar.inactiveBackground": "#f98b7e99",
        "titleBar.inactiveForeground": "#15202b99"
    },
    "peacock.color": "#f98b7e"
    // JavaScript specific settings:
    // "[javascript]": {
    //     // disable prettier
    //     "editor.defaultFormatter": null
